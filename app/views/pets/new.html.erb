<%= stylesheet_link_tag "basic_information",:media => "all" %>
<div class="form">
<%= form_with model: @pet, url: user_pets_path, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-child">
    <div class="information">ペット登録フォーム</div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ペットのお名前(全角)</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :pet_name, class:"input-name", id:"pet-name", placeholder:"例) ポチ" %>
        </div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ペット品種(全角)</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_field :pet_breed, class:"input-default", id:"pet-breed", placeholder:"例) ビーグル" %>
        </div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ペットの年齢(半角数字)</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_field :pet_age, class:"input-age", id:"pet-age", placeholder:"例) 3" %><p>歳</p>
        </div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ペットのその他詳細(全角)</label>
          <span class="form-any">任意</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :pet_details, class:"input-details", id:"pet-details", placeholder:"例) ペットの特徴や伝えておきたいことを何でも" %>
        </div>
      </div>

      <div class='buy-btn'>
        <%= f.submit "登録する" ,class:"buy-red-btn" %>
      </div>
  </div>
</div>
<% end %>