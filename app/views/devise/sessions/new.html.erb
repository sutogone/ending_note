
<%= stylesheet_link_tag "users",:media => "all" %>

<div class="login">
    <h1>ログイン</h1>
<%= form_with model: @user, url: new_user_session_path, class: 'form', local: true do |f| %>

      <p class="field">
        <%= f.text_field :medical_record, id:"name", autofocus: true, placeholder:"Medical record", autocomplete: "medical_record" %>
        <i class="fa fa-user"></i>
      </p>

      <p class="field">
        <%= f.password_field :password, id:"password", placeholder:"password", autocomplete: "new-password" %>
        <i class="fa fa-lock"></i>
      </p>

      <p class="submit"><%= f.submit "ログイン", id:"sent" %></p>

</div> 
  <div class="copyright">
    <p>Copyright &copy; 2014. Created by <a href="http://febbygunawan.com" target="_blank">Febby Gunawan</a></p>
  </div> 
<% end %>