<%= stylesheet_link_tag "basic_information",:media => "all" %>
<div class="new-information">
  <%= link_to '資産情報登録', new_user_asset_path, {class: "new-btn"} %>
</div>
<% @assets.each do |assets| %>
<div class="form">
  <div class="form-child">
    <div class="information">資産情報</div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">資産の種類</label>
        </div>
        <div class='output-name-wrap'>
          <%= assets.assets_category.category%>
        </div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">金融機関名</label>
        </div>
        <div class='output-name-wrap'>
          <%= assets.financial %>
        </div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">資産についての詳細</label>
        </div>
        <div class='output-details-wrap'>
          <%= assets.assets_details%>
        </div>
      </div>

      <div class='input-btns'>
        <%= link_to '編集する', edit_user_asset_path(id: assets.id), {class: "input-btn"} %>
      </div>
  </div>
<% end %>